{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Node",
            "program": "${workspaceFolder}/src/index.js",
            "type": "node",
            "request": "launch",
            "skipFiles": [ "<node_internals>/**" ]
        },
        {
            "name": "Bun",
            "program": "./src/index.js",
            "type": "bun",
            "request": "launch",
            "args": [ "run" ],
            "stopOnEntry": false,
            "internalConsoleOptions": "openOnSessionStart",
            "runtime": "bun",
        }
    ]
}
