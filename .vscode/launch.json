{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Node",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\src\\index.js"
        },
        {
            "type": "bun",
            "request": "launch",
            "name": "Bun",
            "program": "./src/index.js",
            "args": ["run"],
            "stopOnEntry": false,
            "internalConsoleOptions": "openOnSessionStart",
            "runtime": "bun",
        }
    ]
}
